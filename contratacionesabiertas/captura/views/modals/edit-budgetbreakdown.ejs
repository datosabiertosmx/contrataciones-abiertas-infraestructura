<form id="editbudgetbreakdown_form">
    <input type="hidden" name="id" value="<%= id %>">

    <div class="row col-sm-12">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Líneas presupuestarias <span class="caret"></span>
        </button>

        <ul class="dropdown-menu">
            <li data-action="new_budgetclassification" data-id="<%= budget.id %>"><a href="javascript:void(0)">Nuevo</a></li>
            <li data-action="edit_budgetclassifications" data-id="<%= budget.id %>"><a href="javascript:void(0)">Editar</a></li>
        </ul>
    </div>
    <br><br><br>
    <p>
        <label title="">Identificador</label>
        <input type="text" class="form-control" name="budgetbreakdown_id" value="<%= budget.budgetbreakdown_id %>" readonly required>
    </p>

    <p>
        <label title="">Descripción</label>
        <textarea class="form-control" name="description" rows="10"><%= budget.description %></textarea>
    </p>
    <div class="row">
        <div class="col-sm-12">
            <p>
                <label data-tooltip="crear_proceso" title='Origen de los recursos públicos que serán utilizados para financiar la contratación. Tomado de la lista de códigos "Origen".'>Origen de los recursos públicos * </label>
                <select class="form-control" name="origin" data-source="programaticstructure" required>
                    <option value="">Seleccione una opción</option>
                    <% for (var i = 0; i < origins.length; i++) { %>
                    <option value="<%= origins[i].value %>"<%= budget.origin == origins[i].value ? 'selected' : '' %>><%= origins[i].value %></option>
                    <% } %>
                </select> 
            </p>
        </div>
        <div class="col-sm-12">
            <p>
                <label data-tooltip="crear_proceso" title='Descripción del tipo de fondo de participación o aportación respectiva, en su caso.'>Tipo de fondo de participación o aportación respectiva</label>
                <input type="text" class="form-control" name="fundType" data-source="programaticstructure" minlength="1" maxlength="250" value="<%= budget.fund_type %>" >
            </p>
        </div>
    </div>
    <label title="">
        <h4>Valor</h4>
    </label>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label title="">Monto</label>
                <input type="number" class="form-control" name="amount" data-vregex="decimal" min="0" step="0.01" value="<%= budget.amount %>" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label title="">Moneda</label>
                <select class="form-control" name="currency" required>
                    <option value="" <%= budget.currency == '' ? 'selected' : '' %>>Seleccione una opción</option>
                    <% for (var i = 0; i < currencies.length; i++) { %>
                    <option value="<%= currencies[i].alphabetic_code %>" <%= budget.currency == currencies[i].alphabetic_code ? 'selected' : '' %>><%= currencies[i].currency + ' - ' + currencies[i].alphabetic_code %></option>
                    <% } %>
                </select>
            </p>
        </div>
    </div>

    <!--<p>
        <label title="">URI</label>
        <input type="url" class="form-control" name="url" value="<%= budget.url %>">
    </p>-->

    <label title="">
        <h4>Periodo del presupuesto</h4>
    </label>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label title="">Fecha de inicio *</label>
                <input type="text" class="form-control" id="newbudgetbreakdown_date1" name="budgetbreakdownPeriod_startdate" value="<%= budget.budgetbreakdownperiod_startdate_text %>" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label title="">Fecha de término *</label>
                <input type="text" class="form-control" id="newbudgetbreakdown_date2" name="budgetbreakdownPeriod_enddate" value="<%= budget.budgetbreakdownperiod_enddate_text %>" required>
            </p>
        </div>
    </div>

    <p>
        <label title="">Fuente del presupuesto *</label>
        <select class="form-control" name="source_id" required>
            <option value="" <%= budget.source_id == '' ? 'selected' : '' %>>Seleccione una opción</option>
            <% for (var i = 0; i < sources.length; i++) { %>
            <option value="<%= sources[i].id %>" <%= budget.source_id == sources[i].id ? 'selected' : '' %>><%= sources[i].name %></option>
            <% } %>
        </select>
    </p>
	<br>
    <button class="btn btn-primary">Guardar</button>
</form>